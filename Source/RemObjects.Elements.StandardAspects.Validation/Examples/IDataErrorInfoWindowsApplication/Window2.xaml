<?xml version='1.0' encoding='utf-8' ?>
<Window x:Class="IDataErrorInfoWindowsApplication.Window2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window2" Height="227" Width="601"
    >
  <Grid>
        <ListView Height="160" HorizontalAlignment="Left" x:Name="ErrorList" Margin="12,12,0,0" VerticalAlignment="Top" Width="474">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="120" Header="Name" DisplayMemberBinding="{Binding PropertyName}"></GridViewColumn>
                    <GridViewColumn Width="330" Header="Message" DisplayMemberBinding="{Binding ErrorMessage}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Button" Height="23" HorizontalAlignment="Right" Margin="0,22,12,0" Name="button1" Click="button1_Click" VerticalAlignment="Top" Width="75" />
    </Grid>
</Window>